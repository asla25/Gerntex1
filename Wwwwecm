<script>
function createBubbles(count) {
  for(let i=0;i<count;i++){
    let bubble = document.createElement('div');
    bubble.classList.add('bubble-effect');
    bubble.style.left = Math.random()*window.innerWidth+'px';
    bubble.style.width = bubble.style.height = (10+Math.random()*20)+'px';
    bubble.style.backgroundColor = ['#ff69b4','#00f0ff','#ffff66','#66ff66'][Math.floor(Math.random()*4)];
    bubble.style.animationDelay = Math.random()*2+'s';
    document.body.appendChild(bubble);
  }
}

setTimeout(() => {
  const explosion = document.getElementById('explosion');
  explosion.style.backgroundColor = 'white';
  document.getElementById('boomSound').play();
  setTimeout(() => {
    explosion.style.display = 'none';
    document.getElementById('bubbles').style.display = 'block';
    document.getElementById('message').style.display = 'block';
    createBubbles(20);
  }, 500);
}, 2000);
</script>

